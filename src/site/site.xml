<project xmlns="http://maven.apache.org/DECORATION/1.3.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

  <bannerLeft>
    <name>gmaven</name>
    <title>GMaven</title>
    <src>http://media.xircles.codehaus.org/_projects/gmaven/_logos/medium.png</src>
    <href>http://gmaven.codehaus.org</href>
  </bannerLeft>

  <skin>
    <groupId>org.apache.maven.skins</groupId>
    <artifactId>maven-fluido-skin</artifactId>
    <version>1.3.0</version>
  </skin>

  <version position="right"/>
  <publishDate position="none"/>

  <custom>
    <fluidoSkin>
      <topBarEnabled>false</topBarEnabled>
      <sideBarEnabled>true</sideBarEnabled>
      <gitHub>
        <projectId>groovy/gmaven</projectId>
        <ribbonOrientation>right</ribbonOrientation>
        <ribbonColor>green</ribbonColor>
      </gitHub>
    </fluidoSkin>
  </custom>

  <body>
    <breadcrumbs>
      <item name="${project.name}" href="${project.url}/index.html"/>
    </breadcrumbs>

    <menu name="Overview">
      <item name="About" href="index.html"/>
    </menu>

    <!--
    Not using ref="modules" to avoid it using project.name in links.
    -->
    <menu name="Plugin">
      <item name="groovy-maven-plugin" href="groovy-maven-plugin/index.html"/>
    </menu>

    <menu name="Support">
      <item name="gmaven-adapter-api" href="gmaven-adapter-api/index.html"/>
      <item name="gmaven-adapter-impl" href="gmaven-adapter-impl/index.html"/>
      <item name="gmaven-testsuite" href="gmaven-testsuite/index.html"/>
    </menu>

    <!--
    Not using ref="reports" to avoid lots of cruft it renders.
    -->
    <menu name="Details">
      <item name="Summary" href="project-summary.html"/>
      <item name="License" href="license.html"/>
      <item name="Source Repository" href="source-repository.html"/>
      <!--<item name="Mailing Lists" href="mail-lists.html"/>-->
      <item name="Issue Tracking" href="issue-tracking.html"/>
      <item name="Modules" href="modules.html"/>
      <item name="Builds" href="integration.html"/>
    </menu>
  </body>
</project>